rules_version = '2';
service cloud.firestore {
  match /databases/{db}/documents {

    // helpers
    function authed()       { return request.auth != null; }
    function creatingOwn()  { return authed() && request.resource.data.ownerUid == request.auth.uid; }
    function isOwner()      { return authed() && request.auth.uid == resource.data.ownerUid; }

    // (simple shape checks keep junk out. )
    function validDoc() {
      return request.resource.data.keys().hasOnly(
        ['id','ownerUid','origin','destination','timeMillis','seats']
      );
    }

    match /offers/{id} {
      allow read: if authed();
      allow create: if creatingOwn() && validDoc();
      allow update, delete: if isOwner();
    }

    match /requests/{id} {
      allow read: if authed();
      allow create: if creatingOwn() && validDoc();
      allow update, delete: if isOwner();
    }
  }
}
