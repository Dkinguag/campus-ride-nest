<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Register -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGoRegister"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Open Register"
        android:minHeight="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnGoOfferCreate"
        app:layout_constraintVertical_chainStyle="packed" />

    <!-- Offer Create (fix: top under Register, bottom above Request) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGoOfferCreate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Open Offer Create"
        android:minHeight="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnGoRegister"
        app:layout_constraintBottom_toTopOf="@id/btnGoRequestCreate" />

    <!-- Request Create -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGoRequestCreate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Open Request Create"
        android:minHeight="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnGoOfferCreate"
        app:layout_constraintBottom_toTopOf="@id/btnGoLogin" />

    <!-- Login (fix: top under Request) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGoLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Open Login"
        android:minHeight="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnGoRequestCreate"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

