<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Back Button - ACCESSIBILITY FIXED -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_revert"
            android:contentDescription="@string/cd_back_button"
            android:nextFocusForward="@id/statusBadge"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Status Badge -->
        <TextView
            android:id="@+id/statusBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="@android:color/holo_blue_dark"
            android:padding="8dp"
            android:text="OFFER"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:contentDescription="@string/cd_badge_offer"
            android:nextFocusForward="@id/routeText"
            app:layout_constraintBottom_toBottomOf="@id/backButton"
            app:layout_constraintStart_toEndOf="@id/backButton"
            app:layout_constraintTop_toTopOf="@id/backButton" />

        <!-- Route Information -->
        <LinearLayout
            android:id="@+id/routeLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/backButton">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_directions"
                android:contentDescription="@string/cd_route_icon" />

            <TextView
                android:id="@+id/routeText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:text="Campus â†’ Airport"
                android:textSize="20sp"
                android:textStyle="bold"
                android:nextFocusForward="@id/dateTimeLayout" />
        </LinearLayout>

        <!-- Date/Time -->
        <LinearLayout
            android:id="@+id/dateTimeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:nextFocusForward="@id/seatsLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/routeLayout">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_my_calendar"
                android:contentDescription="@string/cd_calendar_icon" />

            <TextView
                android:id="@+id/dateTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Nov 15, 2025 at 3:00 PM"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Seats -->
        <LinearLayout
            android:id="@+id/seatsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:nextFocusForward="@id/priceLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dateTimeLayout">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_sort_by_size"
                android:contentDescription="@string/cd_seats_icon" />

            <TextView
                android:id="@+id/seatsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="3 seats"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Price (for offers only) -->
        <LinearLayout
            android:id="@+id/priceLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:nextFocusForward="@id/ownerLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/seatsLayout">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_info_details"
                android:contentDescription="@string/cd_price_icon" />

            <TextView
                android:id="@+id/priceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="$15 per seat"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Owner Info - Clickable for Profile -->
        <LinearLayout
            android:id="@+id/ownerLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:padding="12dp"
            android:nextFocusForward="@id/editButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/priceLayout">

            <!-- Profile Avatar - ACCESSIBILITY FIXED to 48dp -->
            <ImageView
                android:id="@+id/ownerAvatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_myplaces"
                android:contentDescription="@string/cd_post_avatar" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ownerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Smith"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ownerEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="jsmith@psu.edu"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary" />
            </LinearLayout>

            <ImageView
                android:id="@+id/verificationBadge"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_info_details"
                android:contentDescription="@string/cd_verification_badge_verified" />
        </LinearLayout>

        <!-- Action Buttons (visible only for owned posts) -->
        <LinearLayout
            android:id="@+id/actionButtonsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ownerLayout">

            <!-- Edit Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/editButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:minHeight="48dp"
                android:text="Edit"
                android:contentDescription="@string/cd_edit_button"
                app:strokeColor="@color/penn_state_blue"
                app:strokeWidth="1dp"
                android:textColor="@color/penn_state_blue"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <!-- Close Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/closeButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:minHeight="48dp"
                android:text="Close"
                app:backgroundTint="@color/penn_state_blue"
                android:textColor="@color/white"
                android:contentDescription="@string/cd_close_post_button"
                style="@style/Widget.MaterialComponents.Button" />
        </LinearLayout>

        <!-- Reopen Button (visible for closed posts) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/reopenButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:minHeight="48dp"
            android:text="Reopen Post"
            android:visibility="gone"
            android:contentDescription="@string/cd_reopen_post_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ownerLayout"
            style="@style/Widget.Material3.Button" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>