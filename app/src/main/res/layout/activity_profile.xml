<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Profile Header Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Display Name with Verification Badge -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/tv_display_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="User Name"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                        android:textStyle="bold"/>

                    <ImageView
                        android:id="@+id/iv_verified_badge"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/presence_online"
                        android:visibility="gone"/>
                </LinearLayout>

                <!-- Email -->
                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="user@example.com"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    android:layout_marginBottom="16dp"/>

                <!-- Member Since -->
                <TextView
                    android:id="@+id/tv_member_since"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Member since January 2025"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Post Statistics Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ride Statistics"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    android:layout_marginBottom="16dp"/>

                <!-- Active Posts -->
                <TextView
                    android:id="@+id/tv_active_posts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Active: 0"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    android:layout_marginBottom="12dp"/>

                <!-- Closed Posts -->
                <TextView
                    android:id="@+id/tv_closed_posts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Closed: 0"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    android:layout_marginBottom="12dp"/>

                <!-- Total Posts -->
                <TextView
                    android:id="@+id/tv_total_posts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total: 0"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:textStyle="bold"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Edit Profile Button -->
        <Button
            android:id="@+id/btn_edit_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:visibility="gone"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:visibility="gone"/>

    </LinearLayout>
</ScrollView>