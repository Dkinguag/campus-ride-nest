<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Match Score Badge -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvMatchScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="85% Match"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#1B5E20"
                android:background="#E8F5E9"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginEnd="8dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$5.00"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1976D2" />
        </LinearLayout>

        <!-- Route -->
        <TextView
            android:id="@+id/tvRoute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Library → Gym"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <!-- Date & Time -->
        <TextView
            android:id="@+id/tvDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Nov 16, 3:15 PM"
            android:textSize="14sp"
            android:textColor="#424242" />

        <!-- Distance Info -->
        <TextView
            android:id="@+id/tvDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="0.5 km pickup • 0.3 km dropoff"
            android:textSize="12sp"
            android:textColor="#424242" />

        <!-- Compatibility Reason -->
        <TextView
            android:id="@+id/tvCompatibility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Very close route • Perfect timing"
            android:textSize="12sp"
            android:textColor="#1B5E20"
            android:textStyle="italic" />

        <!-- NEW: Select Ride Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfirmRide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:minHeight="48dp"
            android:text="Select This Ride"
            app:backgroundTint="@color/penn_state_blue"
            style="@style/Widget.MaterialComponents.Button" />

    </LinearLayout>
</androidx.cardview.widget.CardView>