<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lblOriginR"
            android:text="Origin"
            android:labelFor="@+id/etOriginR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etOriginR"
            android:hint="HUB"
            android:inputType="textCapWords"
            android:autofillHints="postalAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/lblDestinationR"
            android:text="Destination"
            android:labelFor="@+id/etDestinationR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etDestinationR"
            android:hint="Main Building"
            android:inputType="textCapWords"
            android:autofillHints="postalAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/lblSeatsR"
            android:text="Seats"
            android:labelFor="@+id/etSeatsR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etSeatsR"
            android:hint="1"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Date Button -->
        <Button
            android:id="@+id/dateButton"
            android:text="Select Date"
            android:minHeight="48dp"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Time Button -->
        <Button
            android:id="@+id/timeButton"
            android:text="Select Time"
            android:minHeight="48dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- NEW: Spacer to ensure button visible when keyboard is up -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp"/>

        <Button
            android:id="@+id/btnCreateRequest"
            android:text="Create Request"
            android:minHeight="48dp"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
