<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="16dp"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView android:id="@+id/lblEmailL" android:text="Email"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:labelFor="@+id/etEmailL" />

    <EditText android:id="@+id/etEmailL" android:hint="Email"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:inputType="textEmailAddress" />

    <TextView android:id="@+id/lblPassL" android:text="Password"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:labelFor="@+id/etPassL" />

    <EditText android:id="@+id/etPassL" android:hint="Password"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:inputType="textPassword" />

    <TextView android:id="@+id/tvStatus" android:text=""
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>

    <Button android:id="@+id/btnLogin" android:text="Sign in"
        android:minHeight="48dp" android:layout_marginTop="12dp"
        android:layout_width="match_parent" android:layout_height="wrap_content" />
</LinearLayout>
