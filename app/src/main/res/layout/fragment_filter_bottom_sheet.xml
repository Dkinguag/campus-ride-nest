<?xml version="1.0" encoding="utf-8"?>
<!-- fragment_filter_bottom_sheet.xml -->
<!-- Sprint 3 US-08: Filter posts UI with Material3 components -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filter Posts"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_marginBottom="24dp"
        android:contentDescription="Filter posts header"/>

    <!-- Origin Filter -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Origin"
        app:startIconDrawable="@android:drawable/ic_menu_mylocation"
        app:startIconContentDescription="Filter by origin"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginBottom="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_filter_origin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:contentDescription="Enter origin to filter"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Destination Filter -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Destination"
        app:startIconDrawable="@android:drawable/ic_menu_myplaces"
        app:startIconContentDescription="Filter by destination"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginBottom="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_filter_destination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:contentDescription="Enter destination to filter"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Date Range Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date Range"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        android:contentDescription="Date range filter section"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <!-- Start Date Button -->
        <Button
            android:id="@+id/btn_start_date"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Start Date"
            android:layout_marginEnd="8dp"
            app:icon="@android:drawable/ic_menu_my_calendar"
            android:contentDescription="Select start date for filter"/>

        <!-- End Date Button -->
        <Button
            android:id="@+id/btn_end_date"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="End Date"
            android:layout_marginStart="8dp"
            app:icon="@android:drawable/ic_menu_my_calendar"
            android:contentDescription="Select end date for filter"/>
    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Clear Button -->
        <Button
            android:id="@+id/btn_clear_filters"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Clear All"
            android:layout_marginEnd="8dp"
            android:contentDescription="Clear all filters"/>

        <!-- Apply Button -->
        <Button
            android:id="@+id/btn_apply_filters"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Apply Filters"
            android:layout_marginStart="8dp"
            android:contentDescription="Apply selected filters"
            style="@style/Widget.MaterialComponents.Button"/>
    </LinearLayout>

</LinearLayout>