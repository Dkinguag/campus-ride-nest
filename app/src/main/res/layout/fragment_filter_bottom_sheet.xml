<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Header -->
    <TextView
        android:id="@+id/filterTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Filter Rides"
        android:textSize="20sp"
        android:textStyle="bold"
        android:nextFocusForward="@id/closeButton"
        app:layout_constraintEnd_toStartOf="@id/closeButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Close Button - ACCESSIBILITY FIXED to 48dp -->
    <ImageButton
        android:id="@+id/closeButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:contentDescription="@string/cd_filter_close"
        android:nextFocusForward="@id/et_filter_origin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Origin Input - ID MATCHES KOTLIN CODE -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/originInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="Origin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filterTitle"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_filter_origin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:contentDescription="@string/cd_origin_input"
            android:nextFocusForward="@id/et_filter_destination"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Destination Input - ID MATCHES KOTLIN CODE -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/destinationInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Destination"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/originInputLayout"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_filter_destination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:contentDescription="@string/cd_destination_input"
            android:nextFocusForward="@id/rb_this_week"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Date Range Section -->
    <TextView
        android:id="@+id/dateRangeLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Date Range"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/destinationInputLayout" />

    <!-- RadioGroup - ID MATCHES KOTLIN CODE -->
    <RadioGroup
        android:id="@+id/rg_date_range"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dateRangeLabel">

        <!-- This Week Radio Button - ID MATCHES KOTLIN CODE -->
        <RadioButton
            android:id="@+id/rb_this_week"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="This Week"
            android:contentDescription="@string/cd_date_this_week"
            android:nextFocusForward="@id/rb_next_week"
            android:checked="true" />

        <!-- Next Week Radio Button - ID MATCHES KOTLIN CODE -->
        <RadioButton
            android:id="@+id/rb_next_week"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="Next Week"
            android:contentDescription="@string/cd_date_next_week"
            android:nextFocusForward="@id/rb_no_date" />

        <!-- Custom/No Date Radio Button - ID MATCHES KOTLIN CODE -->
        <RadioButton
            android:id="@+id/rb_no_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="Custom Range"
            android:contentDescription="@string/cd_date_custom"
            android:nextFocusForward="@id/btn_clear_filters" />
    </RadioGroup>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rg_date_range">

        <!-- Clear All Button - ID MATCHES KOTLIN CODE -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_clear_filters"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:minHeight="48dp"
            android:text="Clear All"
            android:contentDescription="@string/cd_filter_clear"
            android:nextFocusForward="@id/btn_apply_filters"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <!-- Apply Button - ID MATCHES KOTLIN CODE -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_apply_filters"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:minHeight="48dp"
            android:text="Apply Filters"
            android:contentDescription="@string/cd_filter_apply"
            style="@style/Widget.Material3.Button" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>