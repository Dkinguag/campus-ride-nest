<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:importantForAutofill="yes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Origin -->
        <TextView
            android:id="@+id/lblOrigin"
            android:text="Origin"
            android:labelFor="@+id/etOrigin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etOrigin"
            android:hint="HUB"
            android:inputType="textCapWords"
            android:autofillHints="postalAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Destination -->
        <TextView
            android:id="@+id/lblDestination"
            android:text="Destination"
            android:labelFor="@+id/etDestination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etDestination"
            android:hint="Main Building"
            android:inputType="textCapWords"
            android:autofillHints="postalAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Seats -->
        <TextView
            android:id="@+id/lblSeats"
            android:text="Seats"
            android:labelFor="@+id/etSeats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etSeats"
            android:hint="2"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Date Button -->
        <Button
            android:id="@+id/dateButton"
            android:text="Select Date"
            android:minHeight="48dp"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Time Button -->
        <Button
            android:id="@+id/timeButton"
            android:text="Select Time"
            android:minHeight="48dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Action -->
        <Button
            android:id="@+id/btnCreateOffer"
            android:text="Create Offer"
            android:minHeight="48dp"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>