<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.booknest.campusridenest">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Explicitly DENY audio permission to prevent crashes -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" tools:node="remove" />

    <!-- Disable audio hardware requirement -->
    <uses-feature android:name="android.hardware.microphone" android:required="false" />
    <uses-feature android:name="android.hardware.audio.low_latency" android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Campus Ride Nest"
        android:theme="@style/AppTheme">  <!-- Changed -->

        <!-- Splash Screen -->
        <activity
            android:name=".ui.SplashActivity"
            android:exported="true"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Onboarding Activity -->
        <activity
            android:name=".ui.OnboardingActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- Login Activity -->
        <activity
            android:name=".ui.LoginActivity"
            android:exported="false"
            android:theme="@style/AppTheme" />

        <!-- Register Activity -->
        <activity
            android:name=".ui.RegisterActivity"
            android:exported="false"
            android:theme="@style/AppTheme" />

        <!-- Posts Activity -->
        <activity
            android:name=".ui.posts.PostsActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- Profile Activity -->
        <activity
            android:name=".ui.profile.ProfileActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- Offer Create Activity -->
        <activity
            android:name=".ui.OfferCreateActivity"
            android:exported="false"
            android:theme="@style/AppTheme" />

        <!-- Request Create Activity -->
        <activity
            android:name=".ui.RequestCreateActivity"
            android:exported="false"
            android:theme="@style/AppTheme" />

        <!-- Post Detail Activity -->
        <activity
            android:name=".ui.posts.PostDetailActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- Edit Post Activity -->
        <activity
            android:name=".ui.posts.EditPostActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- Matched Rides Activity -->
        <activity
            android:name=".ui.MatchedRidesActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- My Posts Activity -->
        <activity
            android:name=".ui.MyPostsActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- Past Rides Activity -->
        <activity
            android:name=".ui.PastRidesActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- Settings Activity -->
        <activity
            android:name=".ui.SettingsActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar" />

    </application>

</manifest>